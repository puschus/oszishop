@using WebGui.Pages.AdminPanels
@using System.Reflection.Emit
<PageTitle>AdminPanel</PageTitle>
<div class="container">
    <h1>Admin Panel</h1>
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3">
        <a class="navbar-brand" href="">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="@LoadUsers">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="@LoadArticles">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="@LoadOrders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="@LoadAddresses">Addresses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" onclick="@LoadCategories">Categories</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row">
        <div class="col-md-12">
            <DynamicComponent Type="@componentType"/>
        </div>
    </div>
</div>
@code {
    private Type componentType = typeof(AdminHome); 

    public void LoadUsers()
    {
        componentType = typeof(UserComp);
    }
    public void LoadArticles()
    {
        componentType = typeof(ArticleComp);
    } 
    public void LoadOrders()
    {
        componentType = typeof(OrdersComp);
    } 
    public void LoadAddresses()
    {
        componentType = typeof(AddressComp);
    }
    public void LoadCategories()
    {
        componentType = typeof(CategoryComp);
    }
}